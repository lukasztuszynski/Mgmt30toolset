@model Mgmt30toolset.Models.ViewModels.KudoViewModel.KudoEditViewModel

@{ Layout = "_Layout"; }

<form method="post" asp-controller="Kudo" asp-action="Edit" asp-antiforgery="true">
    <div class="form-group">
       <label asp-for="CategoryId"></label>
       <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.CategoryList">
           <option disabled selected value="">Select a Category</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea class="form-control" asp-for="Content" rows="3"></textarea>
    </div>
   <div class="form-group">
       <label asp-for="SenderId"></label>
       <select class="form-control" asp-for="SenderId" asp-items="@ViewBag.SenderList">
           <option disabled selected value="">Select a Sender</option>
        </select>
    </div>
    <div class="form-group">
       <label asp-for="ReceiverId"></label>
       <select class="form-control" asp-for="ReceiverId" asp-items="@ViewBag.ReceiverList">
           <option disabled selected value="">Select a Receiver</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="link link-primary" asp-controller="Kudo" asp-action="Index">Cancel</a>
</form>